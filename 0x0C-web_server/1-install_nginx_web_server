#!/bin/bash
# Script to install and configure Nginx to serve "Hello World!" on Ubuntu

# Exit on any error
set -e

# Update package list and install nginx
apt-get update -y
apt-get install nginx -y

# Ensure Nginx is enabled and started
if ! pgrep -x "nginx" > /dev/null; then
    nginx
fi

# Configure the default site to serve "Hello World!"
cat > /var/www/html/index.html <<EOF
Hello World!
EOF

# Ensure the default Nginx configuration is enabled and listening on port 80
cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

# Reload Nginx to apply the configuration
nginx -s reload

# Verify that Nginx is running and serves the expected output
if curl -s localhost | grep -q "Hello World!"; then
    echo "Nginx is configured and serving 'Hello World!' successfully."
else
    echo "Nginx configuration failed. Check logs for details."
    exit 1
fi

